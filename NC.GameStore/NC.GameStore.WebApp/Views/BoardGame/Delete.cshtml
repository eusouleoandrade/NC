@model NC.GameStore.ViewModel.BoardGameViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                Game Store / Board Game / Delete
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInDown">
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Id" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PublishingCompany" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PublishingCompany, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MinPlayers" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MinPlayers, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MaxPlayers" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaxPlayers, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer panel-info">
            <a asp-action="Index" class="btn btn-white">Back to List</a>
            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#deleteConfirmationModal">
                Delete
            </a>
        </div>
    </div>
</div>

<div class="modal inmodal" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                <i class="fa fa-ban modal-icon"></i>
                <h4 class="modal-title">Confirmar exclusão</h4>
            </div>
            <div class="modal-body">
                <p>
                    Are you sure you want to delete the game: <strong>@Model.Title.ToUpper()</strong>
                </p>
                @using (Html.BeginForm("Delete", "BoardGame", FormMethod.Post, new { @id = "delete-form", role = "form" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.Title)
                    @Html.AntiForgeryToken()
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">No</button>
                <button type="button" class="ladda-button btn btn-primary" onclick="$('#delete-form').submit();" data-style="zoom-in">Yes</button>
            </div>
        </div>
    </div>
</div>