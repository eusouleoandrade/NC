@model NC.GameStore.ViewModel.BoardGameViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                Game Store / Board Game / Create
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<form asp-action="Create">
    <div class="wrapper wrapper-content animated fadeInDown">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="form-horizontal">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PublishingCompany" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="PublishingCompany" class="form-control" />
                            <span asp-validation-for="PublishingCompany" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="MinPlayers" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="MinPlayers" class="form-control" />
                            <span asp-validation-for="MinPlayers" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxPlayers" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="MaxPlayers" class="form-control" />
                            <span asp-validation-for="MaxPlayers" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer panel-info">
                <div class="row">
                    <div class="col-md-offset-2 col-md-10">
                        <a asp-action="Index" class="btn btn-white">Back to List</a>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>