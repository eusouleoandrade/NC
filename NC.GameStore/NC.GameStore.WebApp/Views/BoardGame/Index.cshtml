@model IEnumerable<NC.GameStore.ViewModel.BoardGameViewModel>

@{
    ViewBag.Title = "Board Game List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                Game Store / Board Game
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-new-window"></i> New Game</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInDown">
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PublishingCompany)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MinPlayers)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaxPlayers)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th class="text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PublishingCompany)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MinPlayers)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaxPlayers)
                                    </td>
                                    <td>
                                        $ @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <a class="btn-white btn btn-xs" href="/BoardGame/Edit/@item.Id"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                                            <a class="btn-white btn btn-xs" href="/BoardGame/Details/@item.Id"><i class="glyphicon glyphicon-book"></i> Details</a>
                                            <a class="btn-white btn btn-xs" href="/BoardGame/Delete/@item.Id"><i class="glyphicon glyphicon-remove"></i> Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/plugins/dataTables/datatables.min.css" />
}

@section StyleBefore{
    <link rel="stylesheet" href="~/css/plugins/toastr/toastr.min.css" />
}

@section ScriptPage{
    <script src="~/js/plugins/dataTables/datatables.min.js"></script>
    <script src="~/js/custom/setDataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            setDataTable();
        });
    </script>
}